<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivRecyclingSymbol"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_recycling_black" />

    <TextView
        android:textStyle="bold"
        android:textSize="8sp"
        android:id="@+id/tvInnerText"
        app:layout_constraintStart_toStartOf="@id/ivRecyclingSymbol"
        app:layout_constraintEnd_toEndOf="@id/ivRecyclingSymbol"
        app:layout_constraintTop_toTopOf="@id/ivRecyclingSymbol"
        app:layout_constraintBottom_toBottomOf="@id/ivRecyclingSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="캔류" />

    <TextView
        android:id="@+id/tvOuterText"
        app:layout_constraintStart_toStartOf="@id/ivRecyclingSymbol"
        app:layout_constraintEnd_toEndOf="@id/ivRecyclingSymbol"
        app:layout_constraintTop_toBottomOf="@id/ivRecyclingSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알루미늄"
        android:layout_marginVertical="5dp" />


</androidx.constraintlayout.widget.ConstraintLayout>